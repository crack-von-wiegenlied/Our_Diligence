<div class="container">
  <h3 class="mt-3">投稿全件表示</h3>
  <div class="table-responsive">
    <table class="table my-3">
      <thead class="thead-light">
        <tr>
          <th>投稿者ID</th>
          <th class="text-nowrap">投稿者</th>
          <th class="text-nowrap">タイトル</th>
          <th class="text-nowrap">カテゴリー</th>
          <th class="text-nowrap">投稿日</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.user.id %></td>
          <td>
            <%= link_to admin_user_path(post.user) do %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td>
            <%= link_to admin_post_path(post) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td><%= post.category.name %></td>
          <td><%= post.created_at.month %>/<%= post.created_at.day %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>