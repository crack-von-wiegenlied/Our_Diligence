<div class="container">
  <div class="row">
    <h3 class="mt-3">投稿詳細</h3>
    <div>
      <%= link_to "削除する", admin_post_path(@post), method: :delete, data: { confirm: "本当に削除しますか？" }, class:"btn btn-danger m-3" %>
    </div>
  </div>
    <table class="table">
    <tr>
      <th>タイトル</th>
      <td><%= @post.title %></td>
    </tr>
    <tr>
      <th>本文</th>
      <td><%= @post.body %></td>
    </tr>
    <tr>
      <th>投稿者</th>
      <td><%= @post.user.name %></td>
    </tr>
    <tr>
      <th>投稿者のステータス</th>
      <td><%= t(@post.user.is_deleted) %></td>
    </tr>
    <tr>
      <th></th>
      <td></td>
    </tr>
  </table>
</div>