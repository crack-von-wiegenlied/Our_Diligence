<div class="container">
  <% if @user.name != "guestuser" %>
    <h3 class="mt-3"><%= @user.name %>さんの情報編集</h3>
    <div>
      <%= form_with model: @user, url: admin_user_path(@user.id) do |f| %>
        <div class="form-group">
          <label>ユーザーネーム</label>
          <%= f.text_field :name, required: true, class:'form-control' %>
        </div>
        <div class="form-group">
          <label>Image</label>
          <%= f.file_field :image, accept: "image/*", class:'form-control-file' %>
        </div>
        <div class="form-group">
          <label>自己紹介</label>
          <%= f.text_area :introduction, class:'form-control' %>
        </div>
        <div class="form-group">
          <label>会員ステータス</label>
          <%= f.radio_button :is_deleted, "false" %>
          <%= f.label :is_deleted, "有効会員" %>
          <%= f.radio_button :is_deleted, "true" %>
          <%= f.label :is_deleted, "凍結中" %>
        </div>
        <div class="form-group">
          <%= f.submit "ユーザー情報を更新する", class:'btn btn-secondary' %>
        </div>
      <% end %>
    </div>
  <% else %>
    <h3 class="mt-3">ゲストユーザーの情報は編集できません</h3>
  <% end %>
</div>
