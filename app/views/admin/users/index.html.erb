<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="table-responsive">
    <h3 class="mt-3">会員一覧</h3>
    <table class="table my-3">
      <thead class="thead-light">
        <tr>
         <th>ID</th>
         <th class="text-nowrap">ユーザーネーム</th>
         <th class="text-nowrap">会員ステータス</th>
         <th></th>
        </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td><%= t(user.is_deleted) %></td>
          <td>
            <% if user.name != "guestuser" %>
              <%= link_to "編集する", edit_admin_user_path(user), class:"btn btn-success" %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>

    </table>
  </div>
</div>

