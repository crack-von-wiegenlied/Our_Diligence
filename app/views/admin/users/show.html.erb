<div class="container">
    <h3 class="mt-3"><%= @user.name %>さんの情報</h3>
      <table class="table">
        <tr>
          <th class="text-nowrap">ユーザーネーム</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th class="text-nowrap">自己紹介</th>
          <td><%= @user.introduction %></td>
        </tr>
        <tr>
          <th class="text-nowrap">会員ステータス</th>
          <td><%= t(@user.is_deleted) %></td>
        </tr>
        <tr>
          <th></th>
          <td></td>
        </tr>
      </table>
    <% if @user.name != "guestuser" %>
      <%= link_to "編集する", edit_admin_user_path(@user), class:"btn btn-success" %>
    <% end %>
</div>