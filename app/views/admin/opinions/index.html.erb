<div class="container">
  <h3 class="mt-3">ユーザーのご意見</h3>
  <div class="table-responsive">
    <table class="table my-3">
      <thead class="thead-light">
        <tr>
          <th class="text-nowrap">投稿者ID</th>
          <th class="text-nowrap">投稿者</th>
          <th class="text-nowrap">タイトル</th>
          <th class="text-nowrap">本文</th>
          <th class="text-nowrap">投稿日</th>
        </tr>
      </thead>
      <tbody>
      <% @opinions.each do |opinion| %>
        <tr>
          <td><%= opinion.user.id %></td>
          <td>
            <%= link_to admin_user_path(opinion.user) do %>
              <%= opinion.user.name %>
            <% end %>
          </td>
          <td><%= opinion.title %></td>
          <td><%= opinion.body %></td>
          <td><%= opinion.created_at.month %>/<%= opinion.created_at.day %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>