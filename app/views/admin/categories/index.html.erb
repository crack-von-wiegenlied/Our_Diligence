<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <h3 class="mt-3">カテゴリー一覧</h3>
    <div class="m-3 text-right">
      <%= form_with model: @category, url: admin_categories_path do |f| %>
        <div>
          <label>カテゴリー名</label>
          <%= f.text_field :name %>
        </div>
          <%= f.submit "追加する", class:"btn btn-secondary" %>
      <% end %>
    </div>
  </div>
  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>ID</th>
          <th>カテゴリー名</th>
          <th></th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @categories.each do |category| %>
        <tr>
          <td><%= category.id %></td>
          <td><%= category.name %></td>
          <td><%= link_to "編集する", edit_admin_category_path(category.id), class:"btn btn-success" %></td>
          <td><%= link_to "削除する", admin_category_path(category), data: { confirm: "本当に削除しますか？" }, method: :delete, class:"btn btn-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
