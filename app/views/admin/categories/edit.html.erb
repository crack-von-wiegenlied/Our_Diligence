<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="mt-3">
    <%= form_with model: @category, url: admin_category_path do |f| %>
      <div class="form-group">
        <label>カテゴリー名</label>
        <%= f.text_field :name, required: true, maxlength: "15" %>
      </div>
        <%= f.submit "更新する", class:"btn btn-secondary" %>
    <% end %>
  </div>
</div>