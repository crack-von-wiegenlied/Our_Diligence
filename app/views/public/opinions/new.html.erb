<div class="container-fluid">
  <div class="row">
    <div class="col-lg-9 col-sm-12">
      <h3 class="mt-3">ご意見フォーム</h3>
      <div>
        <%= form_with model: @opinion do |f| %>
          <div class="form-group">
            <label>タイトル</label>
            <%= f.text_field :title, required: true, class:'form-control' %>
          </div>
          <div class="form-group">
            <label>本文</label>
            <%= f.text_area :body, required: true, class:'form-control', size: "1x5" %>
          </div>
          <%= f.submit "送信する", class:'btn btn-secondary' %>
        <% end %>
      </div>
    </div>
    <div class="col-lg-3 col-sm-12 mt-3">
      <%= render 'public/shared/sidebar' %>
    </div>
  </div>
</div>