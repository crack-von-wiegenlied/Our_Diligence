<!--キーワード検索結果の画面-->
<div class="container-fluid">
  <div class="row">
    <div class="col-lg-9 col-sm-12">
      <h3 class="mt-3">キーワード：『<%= @word %>』の検索結果</h3>

      <% if @range == "Post" %>
        <div>
          <%= render 'public/posts/post_index', posts: @posts %>
        </div>

      <% else %>
        <%= render 'public/users/user_index', users: @users %>
      <% end %>
    </div>
    <div class="col-lg-3 col-sm-12 mt-3">
      <%= render 'public/shared/sidebar' %>
    </div>
  </div>
</div>
