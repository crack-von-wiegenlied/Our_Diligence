<div class="container">
    <h1 class="text-center p-3"><%= @post.title %></h1>
  <div>
    <div class="text-right"><%= @post.start_time.year%>年<%= @post.start_time.month%>月<%= @post.start_time.day%>日</div>
    <p class="text-right"><%= @post.user.name %></p>
    <div class="row">
      <div class="col-7">
        <p>時間数： <%= @post.work_time %>時間</p>
        <p>カテゴリー： <%= @post.category.name %></p>
      </div>
      <div class="col-5 d-flex">
        <p>コメント件数：<%= @post.comments.count %>　</p>
        <% if @post.favorited_by?(current_user) %>
            <p>
              <%= link_to post_favorites_path(@post), method: :delete do %>
                ♥<%= @post.favorites.count %>いいね
              <% end %>
            </p>
          <% else %>
            <p>
              <%= link_to post_favorites_path(@post),method: :post do %>
                ♡<%= @post.favorites.count %>いいね
              <% end %>
            </p>
          <% end %>
        <% if @post.user == current_user %>
          <%= link_to "編集する", edit_post_path(@post) %>
          <%= link_to "削除する", post_path(@post), method: :delete %>
        <% end %>
      </div>
    </div>
    <p><%= @post.body %></p>
  </div>
    <h5>みんなのコメント</h5>
  <div class="comment-field">

    <% if @post.comments.present? %>
      <div class="row py-3">
        <% @post.comments.each do |comment| %>
        <div class="col-3 py-3 pl-5">
          <%= image_tag comment.user.get_image(50, 50) %>
          <%= comment.user.name %>
          <% if comment.user == current_user %>
            <%= link_to "削除する", post_comment_path(comment.post, comment), method: :delete, class:"ml-1" %>
          <% end %>
        </div>
        <div class="col-9 py-3">
          <%= comment.comment %>
        </div>
        <% end %>

      <% else %>
        <p class="py-3 ml-5">コメントはまだありません</p>
      <% end %>
    </div>
  </div>
  <div class="comment-form form-group">
    <%= form_with model: [@post, @comment] do |f| %>
      <%= f.text_area :comment, placeholder: 'コメントを記入してください', class: 'form-control',size: "2x5" %>
      <%= f.submit "送信する" %>
    <% end %>
  </div>
</div>
