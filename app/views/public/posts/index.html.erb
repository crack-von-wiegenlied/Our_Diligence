<div class="container">
  <div>
    <table>
      <thead>
        <tr>
          <th>タイトル</th>
          <th>カテゴリー</th>
          <th>投稿者</th>
          <th>日付</th>
        </tr>
      </thead>
      <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td>
            <%= link_to post_path(post) do %>
              <%= post.title %>
            <% end %>
          </td>
          <td><%= post.category.name %></td>
          <td>
            <%= link_to user_path(post.user) do %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td><%= post.start_time.month %>/<%= post.start_time.day %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
