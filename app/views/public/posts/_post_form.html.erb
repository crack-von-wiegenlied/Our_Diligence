<div class="container-fluid">
  <div class="row">
      <%= form_with model: post do |f| %>
      <div class="form-group">
        <label>タイトル</label>
        <%= f.text_field :title, required: true %>
      </div>
      <div class="form-group">
        <label>カテゴリー</label>

        <%= f.radio_button :category_select, 1, checked: true %>
        <%= f.label :category_id, "登録済みのカテゴリーから選択する" %>
        <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name) %>

        <%= f.radio_button :category_select, 2 %>
        <%= f.label :category_id, "新しくカテゴリーを追加する" %>
          <%= fields_for :category do |category_form| %>
            <%= category_form.text_field :name %>
          <% end %>

      </div>
      <div class="form-group">
        <label>メモ</label>
        <%= f.text_area :body %>
      </div>
      <div class="form-group">
        <label>時間数</label>
        <%= f.number_field :work_time, step: "0.1", required: true %>
      </div>
      <div class="form-group">
        <lavel>日付</lavel>
        <%= f.date_field :start_time, required: true, value: Time.now.strftime("%Y-%m-%d") %>
      </div>
        <%= f.submit %>
      <% end %>
  </div>
</div>
