
<%= form_with model: post do |f| %>
<div class="form-group">
  <label>タイトル</label>
  <%= f.text_field :title, required: true, class:'form-control' %>
</div>
<div class="form-group">
  <label>カテゴリー</label>
  <%= f.select :category_id, options_from_collection_for_select(Category.all, :id, :name,{selected: post.category_id}), class:'form-control' %>
</div>
<div class="form-group">
  <label>本文</label>
  <%= f.text_area :body, class:'form-control', size: "1x5" %>
</div>
<div class="form-group">
  <label>時間数</label>
  <%= f.number_field :work_time, step: "0.1", required: true, class:'form-control' %>
</div>
<div class="form-group">
  <lavel>日付</lavel>
  <%= f.date_field :start_time, required: true, class:'form-control' %>
</div>
  <%= f.submit class:'btn btn-secondary' %>
<% end %>
